<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" 
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="as.model.Mapper">

    <!-- 通过username获得密码 -->
    <select id="getpwd" parameterType="String" resultType="String">
      select password from user where username=#{username}
    </select>
    
    <!-- 获取学生范围内名单 -->
    <select id="getStulist"  resultType="as.model.Student">
      select name,cardID from stuinfo limit #{begin},#{end}
    </select>
    
    <!-- 获取学生总数-->
    <select id="getTotalNum"  resultType="int">
      select count(*) from stuinfo,card where stuinfo.cardID=card.cardID AND card.check = 0
    </select>

 
</mapper>

